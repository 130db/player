{
    "name": "blackfire/player",
    "type": "library",
    "description": "A powerful web crawler and web scraper with Blackfire support",
    "keywords": ["scraper", "crawler", "blackfire"],
    "homepage": "https://player.blackfire.io/",
    "license": "MIT",
    "authors": [
        {
            "name": "Fabien Potencier",
            "email": "fabien@blackfire.io",
            "homepage": "https://blackfire.io/",
            "role": "Lead Developer"
        }
    ],
    "require": {
        "php": ">=5.5.9",
        "guzzlehttp/guzzle": "^6.1",
        "symfony/dom-crawler": "^2.7",
        "symfony/css-selector": "^2.7",
        "symfony/expression-language": "^2.7",
        "psr/log": "^1.0"
    },
    "require-dev": {
        "blackfire/php-sdk": "^1.5.1",
        "symfony/console": "^2.7",
        "symfony/yaml": "^2.7",
        "mtdowling/jmespath.php": "^2.2"
    },
    "autoload": {
        "psr-4" : {
            "Blackfire\\Player\\" : "Player"
        },
        "exclude-from-classmap": [
            "/Tests/"
        ]
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    }
}
